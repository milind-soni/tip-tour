{
  "name": "tiptour",
  "version": "2.0.0",
  "description": "Smooth, performant tooltip library with advanced movement algorithms",
  "type": "module",
  "files": [
    "dist",
    "src/styles"
  ],
  "main": "./dist/tiptour.umd.cjs",
  "module": "./dist/tiptour.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/tiptour.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/tiptour.umd.cjs"
      }
    },
    "./styles": "./src/styles/tiptour.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "watch": "nodemon -e ts,html --exec \"npm run build\"",
    "preview": "vite preview"
  },
  "keywords": [
    "tooltip",
    "mouse",
    "smooth",
    "animation",
    "ui",
    "library",
    "typescript",
    "performant",
    "interactive"
  ],
  "author": "Milind Soni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/milind-soni/tip-tour"
  },
  "nodemonConfig": {
    "ignore": [
      "./dist/**"
    ]
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "terser": "^5.31.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {}
}
